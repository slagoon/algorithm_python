n = int(input())

arr = [[0] * 3 for _ in range(n)]

for i in range(n):
    r, g, b = map(int, input().split())
    arr[i][0] = r
    arr[i][1] = g
    arr[i][2] = b

D = [[0] * 3 for _ in range(n)]
D[0][0] = arr[0][0]
D[0][1] = arr[0][1]
D[0][2] = arr[0][2]

for i in range(1, n):
    D[i][0] = min(D[i - 1][1], D[i - 1][2]) + arr[i][0]
    D[i][1] = min(D[i - 1][0], D[i - 1][2]) + arr[i][1]
    D[i][2] = min(D[i - 1][0], D[i - 1][1]) + arr[i][2]

print(min(D[n - 1]))
